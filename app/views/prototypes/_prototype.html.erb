<div class="card">
  <% if prototype.image.attached? %>
    <%= link_to prototype_path(prototype) do %>
      <%= image_tag prototype.image, alt: "#{prototype.title} image" %>
    <% end %>
  <% end %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype), class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
      <%= prototype.concept %>
    </p>
    <%= link_to prototype.user.name, user_path(prototype.user_id), class: :card__user %>
  </div>
</div>